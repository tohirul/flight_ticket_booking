{
  "name": "ticket-booking",
  "version": "1.0.0",
  "description": "This is a basic server for Airport Ticket Booking",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "db:migrate": "npx prisma format && npx prisma migrate dev",
    "prepare": "husky",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier:check": "prettier --ignore-path .gitignore --check \"**/*.+(js|ts|json)\"",
    "prettier:fix": "prettier --write .",
    "lint-prettier:check": "npm run lint:check && npm run prettier:check",
    "lint-prettier:fix": "npm run lint:fix && npm run prettier:fix",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.(ts|tsx|js|jsx)": [
      "npm run lint-prettier:fix"
    ],
    "src/**/*.(json|css|scss|md)|.(babelrc|prettierrc|eslint.js|tsconfig.json)": [
      "npm run lint-prettier:fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run lint-prettier:fix"
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.1",
    "@types/validator": "^13.12.2",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "prisma": "^6.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.4.1",
    "@types/lodash.merge": "^4.6.9",
    "@types/morgan": "^1.9.9",
    "dotenv-expand": "^12.0.1",
    "express": "^4.21.2",
    "http-status": "^2.1.0",
    "lodash.merge": "^4.6.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.12.0",
    "reflect-metadata": "^0.2.2",
    "ts-jest": "^29.2.5",
    "tsconfig-paths": "^4.2.0",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  }
}
